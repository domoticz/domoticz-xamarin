<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NL.HNOGames.Domoticz.Views.Dialog.SwitchPopup"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:custcontrol="clr-namespace:NL.HNOGames.Domoticz.Controls;assembly=NL.HNOGames.Domoticz"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    ios:Page.UseSafeArea="true"
    Style="{StaticResource ContentPageType}"
    Visual="Material">
    <NavigationPage.TitleView>
        <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout
                x:Name="titleLayout"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All"
                Orientation="Horizontal"
                Spacing="0"
                VerticalOptions="Center">
                <Label
                    x:Name="title"
                    HorizontalTextAlignment="Start"
                    Style="{DynamicResource TitleStyle}"
                    Text="Connect Switch"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center" />
            </StackLayout>
        </AbsoluteLayout>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <ListView
            x:Name="listView"
            HasUnevenRows="true"
            ItemSelected="OnItemSelected"
            SeparatorVisibility="None"
            VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <custcontrol:CustomViewCell>
                        <StackLayout Spacing="0">
                            <StackLayout
                                Spacing="16"
                                Style="{StaticResource RowStackLayout}"
                                VerticalOptions="FillAndExpand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <StackLayout
                                        Grid.Column="0"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="CenterAndExpand">
                                        <custcontrol:TintedCachedImage
                                            ErrorPlaceholder="ic_launcher.png"
                                            HeightRequest="30"
                                            Opacity="{Binding Opacity}"
                                            Source="{Binding Icon}"
                                            WidthRequest="30" />
                                    </StackLayout>
                                    <StackLayout
                                        Grid.Column="1"
                                        HorizontalOptions="FillAndExpand"
                                        Orientation="Vertical"
                                        VerticalOptions="Center">
                                        <Label
                                            LineBreakMode="TailTruncation"
                                            Style="{StaticResource HeaderType}"
                                            Text="{Binding Name}" />
                                        <custcontrol:MultiLineLabel
                                            LineBreakMode="WordWrap"
                                            Lines="2"
                                            Style="{StaticResource DetailType}"
                                            Text="{Binding DataDescription}" />
                                        <Label
                                            HorizontalOptions="Start"
                                            IsVisible="{Binding ShowExtraData}"
                                            LineBreakMode="TailTruncation"
                                            Style="{StaticResource DetailSmallType}"
                                            Text="{Binding LastUpdateDescription}"
                                            VerticalOptions="End" />
                                    </StackLayout>
                                </Grid>
                            </StackLayout>
                            <BoxView Style="{StaticResource ListSeperator}" />
                        </StackLayout>
                    </custcontrol:CustomViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>