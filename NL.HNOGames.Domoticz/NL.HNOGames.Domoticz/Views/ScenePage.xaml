    Visual="Material">

    <NavigationPage.TitleView>
        <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <custcontrol:TitleViewSearchBar
                x:Name="searchBar"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All"
                IsVisible="false">
                <custcontrol:TitleViewSearchBar.TextColor>
                    <OnPlatform x:TypeArguments="Color" Android="White" />
                </custcontrol:TitleViewSearchBar.TextColor>
                <custcontrol:TitleViewSearchBar.PlaceholderColor>
                    <OnPlatform x:TypeArguments="Color" Android="White" />
                </custcontrol:TitleViewSearchBar.PlaceholderColor>
                <custcontrol:TitleViewSearchBar.CancelButtonColor>
                    <OnPlatform x:TypeArguments="Color" Android="White" />
                </custcontrol:TitleViewSearchBar.CancelButtonColor>
            </custcontrol:TitleViewSearchBar>
            <StackLayout
                x:Name="titleLayout"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All"
                Orientation="Horizontal"
                Spacing="0"
                VerticalOptions="Center">
                <Label
                    x:Name="title"
                    HorizontalTextAlignment="Start"
                    Style="{DynamicResource TitleStyle}"
                    Text="{Binding Title}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center" />
                <Label
                    x:Name="subtitle"
                    Margin="10,4,0,0"
                    HorizontalTextAlignment="Start"
                    Style="{DynamicResource SubtitleStyle}"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center" />
            </StackLayout>
            <Image
                x:Name="searchIcon"
                Margin="0,0,16,0"
                AbsoluteLayout.LayoutBounds="1,0.5,AutoSize,AutoSize"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Source="baseline_search_white_24.png" />
        </AbsoluteLayout>
    </NavigationPage.TitleView>

