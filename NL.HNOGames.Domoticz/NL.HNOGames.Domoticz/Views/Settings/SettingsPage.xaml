<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NL.HNOGames.Domoticz.Views.Settings.SettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:custcontrol="clr-namespace:NL.HNOGames.Domoticz.Controls;assembly=NL.HNOGames.Domoticz"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:resources="clr-namespace:NL.HNOGames.Domoticz.Resources;assembly=NL.HNOGames.Domoticz"
    Title="{resources:Translate wizard_button_settings}"
    ios:Page.UseSafeArea="true"
    Style="{StaticResource ContentPageType}"
    Visual="Material">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                HorizontalOptions="FillAndExpand"
                Orientation="Vertical"
                Spacing="0">
                <StackLayout
                    x:Name="lyPremium"
                    HorizontalOptions="FillAndExpand"
                    Orientation="Horizontal"
                    Style="{StaticResource SettingsRowStackLayout}"
                    VerticalOptions="StartAndExpand">
                    <StackLayout
                        HorizontalOptions="StartAndExpand"
                        Orientation="Vertical"
                        VerticalOptions="Center">
                        <Label
                            HorizontalOptions="Start"
                            LineBreakMode="NoWrap"
                            Style="{StaticResource SettingsDetailType}"
                            Text="{resources:Translate premium_title}"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>
                    <custcontrol:ExtendedButton
                        Padding="10,0,10,0"
                        Clicked="btnBuyPremium_Clicked"
                        HorizontalOptions="End"
                        Text="Buy"
                        VerticalOptions="Center" />
                    <custcontrol:ExtendedButton
                        x:Name="btnRestore"
                        Padding="10,0,10,0"
                        Clicked="BtnRestore_OnClicked"
                        HorizontalOptions="End"
                        Text="Restore"
                        VerticalOptions="Center" />
                </StackLayout>

                <TableView HasUnevenRows="true" Intent="Settings">
                    <TableRoot>
                        <TableSection Title="{resources:Translate title_dashboard}">
                            <ViewCell Tapped="btnEnableScreens_Clicked">
                                <StackLayout
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal"
                                    Style="{StaticResource SettingsRowStackLayout}"
                                    VerticalOptions="StartAndExpand">
                                    <StackLayout
                                        HorizontalOptions="StartAndExpand"
                                        Orientation="Vertical"
                                        VerticalOptions="Center">
