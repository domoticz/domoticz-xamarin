                                            LineBreakMode="NoWrap"
                                            Style="{StaticResource SettingsDetailType}"
                                            Text="{resources:Translate enable_items}"
                                            VerticalOptions="CenterAndExpand" />
                                    </StackLayout>
                                    <custcontrol:TintedCachedImage
                                        HorizontalOptions="EndAndExpand"
                                        Source="baseline_arrow_right_black_24.png"
                                        Style="{DynamicResource expendIcon}"
                                        VerticalOptions="CenterAndExpand" />
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="btnEnableScreens_Clicked" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                            </ViewCell>
                            <ViewCell>
                                <StackLayout
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal"
                                    Style="{StaticResource SettingsRowStackLayout}"
                                    VerticalOptions="StartAndExpand">
                                    <StackLayout
                                        HorizontalOptions="StartAndExpand"
                                        Orientation="Vertical"
                                        VerticalOptions="Center">
                                        <Label
                                            HorizontalOptions="Start"
                                            Style="{StaticResource SettingsDetailType}"
                                            Text="{resources:Translate sort_server_title}"
                                            VerticalOptions="CenterAndExpand" />
                                        <Label
                                            x:Name="lblSort"
                                            HorizontalOptions="Start"
                                            Style="{StaticResource DetailSmallType}"
                                            Text="{resources:Translate sort_server_on}"
                                            VerticalOptions="CenterAndExpand" />
                                    </StackLayout>
                                    <Switch
                                        x:Name="swNoSort"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center" />
                                </StackLayout>
                            </ViewCell>
                            <ViewCell>
                                <StackLayout
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal"
                                    Style="{StaticResource SettingsRowStackLayout}"
                                    VerticalOptions="StartAndExpand">
                                    <StackLayout
                                        HorizontalOptions="StartAndExpand"
                                        Orientation="Vertical"
                                        VerticalOptions="Center">
                                        <Label
                                            HorizontalOptions="Start"
                                            Style="{StaticResource SettingsDetailType}"
                                            Text="{resources:Translate switch_buttons_title}"
                                            VerticalOptions="CenterAndExpand" />
                                        <Label
                                            x:Name="lblShowSwitch"
                                            HorizontalOptions="Start"
                                            Style="{StaticResource DetailSmallType}"
                                            Text="{resources:Translate switch_buttons_on}"
                                            VerticalOptions="CenterAndExpand" />
                                    </StackLayout>
                                    <Switch
                                        x:Name="swShowSwitch"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center" />
                                </StackLayout>
                            </ViewCell>
                            <ViewCell>
