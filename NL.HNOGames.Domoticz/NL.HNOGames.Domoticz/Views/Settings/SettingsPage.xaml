               LineBreakMode="NoWrap"
               Style="{StaticResource HeaderType}"
               Text="{resources:Translate notification_screen_title}" />
            <BoxView Style="{StaticResource HeaderSeperator}" />
            <StackLayout
               Padding="0,10,0,10"
               HorizontalOptions="FillAndExpand"
               Orientation="Horizontal"
               VerticalOptions="StartAndExpand">
               <StackLayout
                  HorizontalOptions="StartAndExpand"
                  Orientation="Vertical"
                  VerticalOptions="Center">
                  <Label
                     HorizontalOptions="Start"
                     Style="{StaticResource SettingsDetailType}"
                     Text="{resources:Translate enable_notifications_title}"
                     VerticalOptions="CenterAndExpand" />
                  <Label
                     HorizontalOptions="Start"
                     Style="{StaticResource DetailSmallType}"
                     Text="{resources:Translate enable_notifications}"
                     VerticalOptions="CenterAndExpand" />
               </StackLayout>
               <Switch
                  x:Name="swEnableNotifications"
                  HorizontalOptions="End"
                  VerticalOptions="Center" />
            </StackLayout>
            <BoxView Style="{StaticResource DetailSeperator}" />
            <Label
               Margin="0,10,0,0"
               LineBreakMode="NoWrap"
               Style="{StaticResource HeaderType}"
               Text="{resources:Translate category_startup_security}" />
            <BoxView Style="{StaticResource HeaderSeperator}" />
            <StackLayout
               Padding="0,10,0,10"
               HorizontalOptions="FillAndExpand"
               Orientation="Horizontal"
               VerticalOptions="StartAndExpand">
               <StackLayout
                  HorizontalOptions="StartAndExpand"
                  Orientation="Vertical"
                  VerticalOptions="Center">
                  <Label
                     HorizontalOptions="Start"
                     Style="{StaticResource SettingsDetailType}"
                     Text="{resources:Translate security_settings}"
                     VerticalOptions="CenterAndExpand" />
                  <Label
                     HorizontalOptions="Start"
                     Style="{StaticResource DetailSmallType}"
                     Text="{resources:Translate enable_security}"
                     VerticalOptions="CenterAndExpand" />
               </StackLayout>
               <Switch
                  x:Name="swEnableFingerprintSecurity"
                  HorizontalOptions="End"
                  VerticalOptions="Center" />
            </StackLayout>
            <BoxView Style="{StaticResource DetailSeperator}" />
            <Label
               Margin="0,10,0,0"
               LineBreakMode="NoWrap"
               Style="{StaticResource HeaderType}"
               Text="{resources:Translate category_theme}" />
            <BoxView Style="{StaticResource HeaderSeperator}" />
            <StackLayout
               Padding="0,10,0,0"
               HorizontalOptions="FillAndExpand"
               Orientation="Horizontal"
               VerticalOptions="StartAndExpand">
               <StackLayout
                  HorizontalOptions="StartAndExpand"
                  Orientation="Vertical"
                  VerticalOptions="Center">
                  <Label
                     HorizontalOptions="Start"
                     LineBreakMode="NoWrap"
                     Style="{StaticResource SettingsDetailType}"
                     Text="{resources:Translate set_dark_theme}"
                     VerticalOptions="CenterAndExpand" />
               </StackLayout>
               <Switch
                  x:Name="swDarkTheme"
                  HorizontalOptions="End"
                  VerticalOptions="Center" />
            </StackLayout>
            <BoxView Style="{StaticResource DetailSeperator}" />
            <Label
               Margin="0,10,0,0"
               LineBreakMode="NoWrap"
               Style="{StaticResource HeaderType}"
               Text="{resources:Translate cameraActivity_name}" />
            <BoxView Style="{StaticResource HeaderSeperator}" />
            <StackLayout
               Padding="0,10,0,0"
               HorizontalOptions="FillAndExpand"
               Orientation="Horizontal"
               VerticalOptions="StartAndExpand">
               <StackLayout
                  HorizontalOptions="StartAndExpand"
                  Orientation="Vertical"
                  VerticalOptions="Center">
                  <Label
                     HorizontalOptions="Start"
                     LineBreakMode="NoWrap"
                     Style="{StaticResource SettingsDetailType}"
                     Text="{resources:Translate cameraActivity_name}"
                     VerticalOptions="CenterAndExpand" />
               </StackLayout>
               <custcontrol:TintedCachedImage
                  HorizontalOptions="EndAndExpand"
                  Source="baseline_arrow_right_black_24.png"
                  Style="{DynamicResource expendIcon}"
                  VerticalOptions="CenterAndExpand" />
               <StackLayout.GestureRecognizers>
                  <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="BtnCameras_OnClicked" />
               </StackLayout.GestureRecognizers>
            </StackLayout>
            <BoxView Style="{StaticResource DetailSeperator}" />
            <Label
               Margin="0,10,0,0"
               LineBreakMode="NoWrap"
               Style="{StaticResource HeaderType}"
               Text="{resources:Translate category_Speech}" />
            <BoxView Style="{StaticResource HeaderSeperator}" />
            <StackLayout
               Padding="0,10,0,0"
               HorizontalOptions="FillAndExpand"
               IsVisible="True"
               Orientation="Horizontal"
               VerticalOptions="StartAndExpand">
               <StackLayout
                  HorizontalOptions="StartAndExpand"
                  Orientation="Vertical"
                  VerticalOptions="Center">
                  <Label
                     HorizontalOptions="Start"
                     LineBreakMode="NoWrap"
                     Style="{StaticResource SettingsDetailType}"
                     Text="{resources:Translate category_Speech}"
                     VerticalOptions="CenterAndExpand" />
               </StackLayout>
               <custcontrol:TintedCachedImage
                  HorizontalOptions="EndAndExpand"
                  Source="baseline_arrow_right_black_24.png"
                  Style="{DynamicResource expendIcon}"
                  VerticalOptions="CenterAndExpand" />
               <StackLayout.GestureRecognizers>
                  <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="btnSpeechSettings_Clicked" />
               </StackLayout.GestureRecognizers>
            </StackLayout>
            <BoxView Style="{StaticResource DetailSeperator}" />

            <!--<Label Text="{resources:Translate title_geofence}" LineBreakMode="NoWrap"
                           Style="{StaticResource HeaderType}" Margin="0,10,0,0"/>
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                                 Orientation="Horizontal" Padding="0,10,0,0" IsVisible="True">
                    <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Orientation="Vertical">
                        <Label Text="{resources:Translate description_geofence}" VerticalOptions="CenterAndExpand"
                                   HorizontalOptions="Start" LineBreakMode="NoWrap"
                                   Style="{StaticResource SettingsDetailType}" />
                    </StackLayout>
               <custcontrol:TintedCachedImage
                  HorizontalOptions="EndAndExpand"
                  Source="baseline_arrow_right_black_24.png"
                  Style="{DynamicResource expendIcon}"
                  VerticalOptions="CenterAndExpand" />
             <StackLayout.GestureRecognizers>
                  <TapGestureRecognizer
                   Tapped="btnGeofenceSettings_Clicked"
                   NumberOfTapsRequired="1" />
               </StackLayout.GestureRecognizers>
                </StackLayout>-->

            <Label
               Margin="0,10,0,0"
               LineBreakMode="NoWrap"
               Style="{StaticResource HeaderType}"
               Text="{resources:Translate category_QRCode}" />
            <BoxView Style="{StaticResource HeaderSeperator}" />
            <StackLayout
               Padding="0,10,0,0"
               HorizontalOptions="FillAndExpand"
               IsVisible="True"
               Orientation="Horizontal"
               VerticalOptions="StartAndExpand">
               <StackLayout
                  HorizontalOptions="StartAndExpand"
                  Orientation="Vertical"
                  VerticalOptions="Center">
                  <Label
                     HorizontalOptions="Start"
                     LineBreakMode="NoWrap"
                     Style="{StaticResource SettingsDetailType}"
                     Text="{resources:Translate category_QRCode}"
                     VerticalOptions="CenterAndExpand" />
               </StackLayout>
               <custcontrol:TintedCachedImage
                  HorizontalOptions="EndAndExpand"
                  Source="baseline_arrow_right_black_24.png"
                  Style="{DynamicResource expendIcon}"
                  VerticalOptions="CenterAndExpand" />
               <StackLayout.GestureRecognizers>
                  <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="btnQRCode_Clicked" />
               </StackLayout.GestureRecognizers>
            </StackLayout>
            <BoxView Style="{StaticResource DetailSeperator}" />
            <Label
               Margin="0,10,0,0"
               LineBreakMode="NoWrap"
               Style="{StaticResource HeaderType}"
               Text="{resources:Translate category_advanced}" />
            <BoxView Style="{StaticResource HeaderSeperator}" />
            <StackLayout
               Padding="0,10,0,0"
               HorizontalOptions="FillAndExpand"
               Orientation="Horizontal"
               VerticalOptions="StartAndExpand">
               <StackLayout
                  HorizontalOptions="StartAndExpand"
                  Orientation="Vertical"
                  VerticalOptions="Center">
                  <Label
                     HorizontalOptions="Start"
                     LineBreakMode="NoWrap"
                     Style="{StaticResource SettingsDetailType}"
                     Text="{resources:Translate button_status_log}"
                     VerticalOptions="CenterAndExpand" />
               </StackLayout>
               <custcontrol:TintedCachedImage
                  HorizontalOptions="EndAndExpand"
                  Source="baseline_arrow_right_black_24.png"
                  Style="{DynamicResource expendIcon}"
                  VerticalOptions="CenterAndExpand" />
               <StackLayout.GestureRecognizers>
                  <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="btnShowLog_Clicked" />
               </StackLayout.GestureRecognizers>
            </StackLayout>
            <BoxView Style="{StaticResource DetailSeperator}" />
            <StackLayout
               Padding="0,10,0,0"
               HorizontalOptions="FillAndExpand"
               Orientation="Horizontal"
               VerticalOptions="StartAndExpand">
               <StackLayout
                  HorizontalOptions="StartAndExpand"
                  Orientation="Vertical"
                  VerticalOptions="Center">
                  <Label
                     HorizontalOptions="Start"
                     LineBreakMode="NoWrap"
                     Style="{StaticResource SettingsDetailType}"
                     Text="{resources:Translate title_vars}"
                     VerticalOptions="CenterAndExpand" />
               </StackLayout>
               <custcontrol:TintedCachedImage
                  HorizontalOptions="EndAndExpand"
                  Source="baseline_arrow_right_black_24.png"
                  Style="{DynamicResource expendIcon}"
                  VerticalOptions="CenterAndExpand" />
               <StackLayout.GestureRecognizers>
                  <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="btnUserVars_Clicked" />
               </StackLayout.GestureRecognizers>
            </StackLayout>
            <BoxView Style="{StaticResource DetailSeperator}" />
            <StackLayout
               Padding="0,10,0,0"
               HorizontalOptions="FillAndExpand"
