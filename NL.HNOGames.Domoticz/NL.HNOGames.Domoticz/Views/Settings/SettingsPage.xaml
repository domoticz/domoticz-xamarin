                                            HorizontalOptions="Start"
                                            LineBreakMode="NoWrap"
                                            Style="{StaticResource SettingsDetailType}"
                                            Text="{resources:Translate enable_items}"
                                            VerticalOptions="CenterAndExpand" />
                                    </StackLayout>
                                    <custcontrol:TintedCachedImage
                                        HorizontalOptions="EndAndExpand"
                                        Source="baseline_arrow_right_black_24.png"
                                        Style="{DynamicResource expendIcon}"
                                        VerticalOptions="CenterAndExpand" />
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="btnEnableScreens_Clicked" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                            </ViewCell>
                            <ViewCell>
                                <StackLayout
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal"
                                    Style="{StaticResource SettingsRowStackLayout}"
                                    VerticalOptions="StartAndExpand">
                                    <StackLayout
                                        HorizontalOptions="StartAndExpand"
                                        Orientation="Vertical"
                                        VerticalOptions="Center">
                                        <Label
                                            HorizontalOptions="Start"
                                            Style="{StaticResource SettingsDetailType}"
                                            Text="{resources:Translate sort_dashboardLikeServer_title}"
                                            VerticalOptions="CenterAndExpand" />
                                        <Label
                                            x:Name="lblSort"
                                            HorizontalOptions="Start"
                                            Style="{StaticResource DetailSmallType}"
                                            Text="{resources:Translate sort_dashboardLikeServer_on}"
                                            VerticalOptions="CenterAndExpand" />
                                    </StackLayout>
                                    <Switch
                                        x:Name="swNoSort"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center" />
                                </StackLayout>
                            </ViewCell>
                            <ViewCell>
                                <StackLayout
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal"
                                    Style="{StaticResource SettingsRowStackLayout}"
                                    VerticalOptions="StartAndExpand">
                                    <StackLayout
                                        HorizontalOptions="StartAndExpand"
                                        Orientation="Vertical"
                                        VerticalOptions="Center">
                                        <Label
                                            HorizontalOptions="Start"
                                            Style="{StaticResource SettingsDetailType}"
                                            Text="{resources:Translate switch_buttons_title}"
                                            VerticalOptions="CenterAndExpand" />
                                        <Label
                                            x:Name="lblShowSwitch"
                                            HorizontalOptions="Start"
                                            Style="{StaticResource DetailSmallType}"
                                            Text="{resources:Translate switch_buttons_on}"
                                            VerticalOptions="CenterAndExpand" />
                                    </StackLayout>
                                    <Switch
                                        x:Name="swShowSwitch"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center" />
                                </StackLayout>
                            </ViewCell>
                            <ViewCell>
                                <StackLayout
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal"
                                    Style="{StaticResource SettingsRowStackLayout}"
                                    VerticalOptions="StartAndExpand">
                                    <StackLayout
                                        HorizontalOptions="StartAndExpand"
                                        Orientation="Vertical"
                                        VerticalOptions="Center">
                                        <Label
                                            HorizontalOptions="Start"
                                            Style="{StaticResource SettingsDetailType}"
                                            Text="{resources:Translate extra_data_title}"
                                            VerticalOptions="CenterAndExpand" />
                                        <Label
                                            x:Name="lblExtraData"
                                            HorizontalOptions="Start"
                                            Style="{StaticResource DetailSmallType}"
                                            Text="{resources:Translate show_extra_data_on}"
                                            VerticalOptions="CenterAndExpand" />
                                    </StackLayout>
                                    <Switch
                                        x:Name="swExtraData"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center" />
                                </StackLayout>
                            </ViewCell>
                        </TableSection>

                        <TableSection Title="{resources:Translate category_server}">
