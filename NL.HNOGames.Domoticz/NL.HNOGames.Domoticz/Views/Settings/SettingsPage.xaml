               LineBreakMode="NoWrap"
               Style="{StaticResource HeaderType}"
               Text="{resources:Translate category_server}" />
            <BoxView Style="{StaticResource HeaderSeperator}" />
            <StackLayout
               Padding="0,10,0,0"
               HorizontalOptions="FillAndExpand"
               IsVisible="False"
               Orientation="Horizontal"
               VerticalOptions="StartAndExpand">
               <StackLayout
                  HorizontalOptions="StartAndExpand"
                  Orientation="Vertical"
                  VerticalOptions="Center">
                  <Label
                     HorizontalOptions="Start"
                     Style="{StaticResource SettingsDetailType}"
                     Text="{resources:Translate multi_server}"
                     VerticalOptions="CenterAndExpand" />
                  <Label
                     HorizontalOptions="Start"
                     Style="{StaticResource DetailSmallType}"
                     Text="{resources:Translate multi_server_settings}"
                     VerticalOptions="CenterAndExpand" />
               </StackLayout>
               <Switch
                  x:Name="swEnableMultiServer"
                  HorizontalOptions="End"
                  VerticalOptions="Center" />
            </StackLayout>
            <BoxView Style="{StaticResource DetailSeperator}" />
            <StackLayout
               Padding="0,10,0,10"
               HorizontalOptions="FillAndExpand"
               Orientation="Horizontal"
               VerticalOptions="StartAndExpand">
               <StackLayout
                  HorizontalOptions="StartAndExpand"
                  Orientation="Vertical"
                  VerticalOptions="Center">
                  <Label
                     HorizontalOptions="Start"
                     LineBreakMode="NoWrap"
                     Style="{StaticResource SettingsDetailType}"
                     Text="{resources:Translate server_settings}"
                     VerticalOptions="CenterAndExpand" />
               </StackLayout>
               <custcontrol:TintedCachedImage
                  HorizontalOptions="EndAndExpand"
                  Source="baseline_arrow_right_black_24.png"
                  Style="{DynamicResource expendIcon}"
                  VerticalOptions="CenterAndExpand" />
               <StackLayout.GestureRecognizers>
                  <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="btnServerSetup_Clicked" />
               </StackLayout.GestureRecognizers>
            </StackLayout>
            <BoxView Style="{StaticResource DetailSeperator}" />
            <Label
               LineBreakMode="NoWrap"
               Style="{StaticResource HeaderType}"
               Text="{resources:Translate category_generic}" />
            <BoxView Style="{StaticResource HeaderSeperator}" />
            <StackLayout
               Padding="0,10,0,10"
               HorizontalOptions="FillAndExpand"
               Orientation="Horizontal"
               VerticalOptions="StartAndExpand">
               <StackLayout
                  HorizontalOptions="StartAndExpand"
                  Orientation="Vertical"
                  VerticalOptions="Center">
                  <Label
                     HorizontalOptions="Start"
                     LineBreakMode="NoWrap"
                     Style="{StaticResource SettingsDetailType}"
                     Text="{resources:Translate startup_screen}"
                     VerticalOptions="CenterAndExpand" />
               </StackLayout>
               <Picker
                  x:Name="txtStartScherm"
                  HorizontalOptions="End"
                  MinimumWidthRequest="100"
                  Style="{StaticResource PickerType}" />
            </StackLayout>
            <BoxView Style="{StaticResource DetailSeperator}" />
            <StackLayout
               Padding="0,10,0,10"
               HorizontalOptions="FillAndExpand"
               Orientation="Horizontal"
               VerticalOptions="StartAndExpand">
               <StackLayout
                  HorizontalOptions="StartAndExpand"
                  Orientation="Vertical"
                  VerticalOptions="Center">
                  <Label
                     HorizontalOptions="Start"
                     Style="{StaticResource SettingsDetailType}"
                     Text="{resources:Translate category_talk_back}"
                     VerticalOptions="CenterAndExpand" />
                  <Label
                     HorizontalOptions="Start"
                     Style="{StaticResource DetailSmallType}"
                     Text="{resources:Translate set_talk_back_on}"
                     VerticalOptions="CenterAndExpand" />
               </StackLayout>
               <Switch
                  x:Name="swEnableTalkBack"
                  HorizontalOptions="End"
                  VerticalOptions="Center" />
            </StackLayout>
            <BoxView Style="{StaticResource DetailSeperator}" />
            <StackLayout
